@page "/"

<SfChart Title="Teenage Digital Engagement in the US 2023"
         SubTitle="% of U.S. teens age 13 to 17 who report visiting or using in the following apps or sites">
         <ChartSubTitleStyle TextOverflow="TextOverflow.None" Size="10px"></ChartSubTitleStyle>
    <ChartArea>
        <ChartAreaBorder Width="0"></ChartAreaBorder>
    </ChartArea>
    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category">
        <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
    </ChartPrimaryXAxis>
    <ChartPrimaryYAxis Visible="false"></ChartPrimaryYAxis>
    <ChartSeriesCollection>
        <ChartSeries DataSource="SocialMediaUsageDataList" Fill="#002748" XName="Category" YName="AlmostConstantly"
                     Type="ChartSeriesType.StackingBar100" Name="AlmostConstantly">
            <ChartMarker>
                <ChartDataLabel Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="SocialMediaUsageDataList" Fill="#32526c" XName="Category" YName="SeveralTimesADay"
                     Type="ChartSeriesType.StackingBar100" Name="SeveralTimesADay">
            <ChartMarker>
                <ChartDataLabel Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="SocialMediaUsageDataList" Fill="#4c677e" XName="Category" YName="AboutOnceADay"
                     Type="ChartSeriesType.StackingBar100" Name="AboutOnceADay">
            <ChartMarker>
                <ChartDataLabel Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="SocialMediaUsageDataList" Fill="#667d91" XName="Category" YName="SeveralTimesAWeek"
                     Type="ChartSeriesType.StackingBar100" Name="SeveralTimesAWeek">
            <ChartMarker>
                <ChartDataLabel Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="SocialMediaUsageDataList" Fill="#99a8b5" XName="Category" YName="LessOften"
                     Type="ChartSeriesType.StackingBar100" Name="LessOften">
            <ChartMarker>
                <ChartDataLabel Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="SocialMediaUsageDataList" Fill="#b2bec8" XName="Category" YName="DoNotUse"
                     Type="ChartSeriesType.StackingBar100" Name="DoNotUse">
            <ChartMarker>
                <ChartDataLabel Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
    </ChartSeriesCollection>
    <ChartTooltipSettings Enable="true" Fill="white" Header="${point.x}" Format="${series.name} : ${point.y}">
        <ChartTooltipTextStyle Color="#002748"></ChartTooltipTextStyle>
        <ChartTooltipBorder Width="2" Color="#002748"></ChartTooltipBorder>
    </ChartTooltipSettings>
    <ChartLegendSettings Visible="true" EnableHighlight="true" Width="700px">
    </ChartLegendSettings>
</SfChart>

