@page "/"

<SfChart Title="Creating a Stacked Column Chart for Global Smartphone Shipments"
         SubTitle="The Stacked column chart showcases the quarterly
            smartphone throughout 2022 (Q1 t0 Q4), while the line chart illustrates the corresponding market
            shares over the same period" Background="#d8ddca">
    <ChartTitleStyle TextAlignment="Alignment.Near"></ChartTitleStyle>
    <ChartSubTitleStyle Size="10px" TextAlignment="Alignment.Near"
                        TextOverflow="TextOverflow.None"></ChartSubTitleStyle>
    <ChartPrimaryXAxis Title="Smartphones" ValueType="Syncfusion.Blazor.Charts.ValueType.Category"></ChartPrimaryXAxis>
    <ChartPrimaryYAxis Title="Smartphone Shipments[Q1-Q4]"></ChartPrimaryYAxis>
    <ChartAxes>
        <ChartAxis Title="Smartphone Marketshare" OpposedPosition="true" RowIndex="0"
                   Name="yAxis2" LabelFormat="{value}%">
        </ChartAxis>
    </ChartAxes>
    <ChartSeriesCollection> 
        <ChartSeries DataSource="@ShipmentsData" Fill="#9aa573" XName="BrandName" YName="Quarter1"
                     Name="Quarter1" Type="ChartSeriesType.StackingColumn">
            <ChartMarker>
                <ChartDataLabel Format="{value}M" Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@ShipmentsData" Fill="#a5af83" XName="BrandName" YName="Quarter2" 
                     Name="Quarter2" Type="ChartSeriesType.StackingColumn">
            <ChartMarker>
                <ChartDataLabel Format="{value}M" Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@ShipmentsData" Fill="#b0b992" XName="BrandName" YName="Quarter3" 
                     Name="Quarter3" Type="ChartSeriesType.StackingColumn">
            <ChartMarker>
                <ChartDataLabel Format="{value}M" Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@ShipmentsData" Fill="#bbc3a2" XName="BrandName" YName="Quarter4" 
                     Name="Quarter4" Type="ChartSeriesType.StackingColumn">
            <ChartMarker>
                <ChartDataLabel Format="{value}M" Visible="true" Position="LabelPosition.Middle"></ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@ShipmentsData" Fill="#555d3c" YAxisName="yAxis2" XName="BrandName" 
                     Name="MarketShare" YName="MarketShare" Width="2" Type="ChartSeriesType.Line">
             <ChartMarker Visible="true" ></ChartMarker>
        </ChartSeries>
    </ChartSeriesCollection>
    <ChartTooltipSettings Enable="true" Shared="true"></ChartTooltipSettings>
    <ChartLegendSettings Visible="true" EnableHighlight="true"></ChartLegendSettings>
</SfChart>

